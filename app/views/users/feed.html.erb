  <% @photos_of_followed_creators.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>

    <td>
      <%= a_photo.created_by %>
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= a_photo.created_at %>
    </td>

    <td>
      <%= Like.where({ :photo_id => a_photo.id }).count %>
    </td>

