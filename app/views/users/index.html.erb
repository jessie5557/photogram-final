<h1>List of users</h1>
<div>

  <table border="1">
    <% if current_user.present? %>
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.username %>
        </td>

        <td>
          <% if a_user.private = true %>
            Yes
          <% else %>
            No
          <% end %>
        </td>

        <td>
          TBD
        </td>

        <td>
          <a href="/users/<%= a_user.username %>">Show details</a>
        </td>
      </tr>
      <% end %>
    <% else %>
      TBD
    <% end %>

  </table>

</div>
